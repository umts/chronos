%h1 New Position
= form_for @position, html: { class: 'form-horizontal' } do |f|
  .form-group
    .control-label.col-xs-2
      = f.label :name, 'Name'
    .col-xs-5
      = f.text_field :name, class: 'form-control', required: true
  .form-group
    .control-label.col-xs-2
      = f.label :union_id, 'Union'
    .col-xs-5
      = f.select :union_id, @unions.collect{ |u| [u.name, u.id] }, {},
                               class: 'selectpicker form-control',
                               include_blank: true
  .form-group
    .col-xs-offset-2.col-xs-5
      = f.submit 'Create', class: 'btn btn-primary'
      = link_to 'Cancel', positions_path, class: 'btn btn-primary'