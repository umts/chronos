%h1 Time Off Request
= form_for @request, html: { class: 'form-horizontal' } do |f|
  .form-group
    .control-label.col-xs-2
      = f.label :name, 'Name'
    .col-xs-5
      = text_field_tag :name, @request.user.first_name + ' ' + @request.user.last_name,
                              class: 'form-control',
                              disabled: true
  .form-group
    .control-label.col-xs-2
      = f.label :start_time, 'Start Time'
    .col-xs-5
      = text_field_tag :start_time, @request.start_time.strftime('%m/%d/%Y %I:%M %p'),
                                    class: 'form-control',
                                    disabled: true
  .form-group
    .control-label.col-xs-2
      = f.label :end_time, 'End Time'
    .col-xs-5
      = text_field_tag :end_time, @request.end_time.strftime('%m/%d/%Y %I:%M %p'),
                                  class: 'form-control',
                                  disabled: true
  .form-group
    .control-label.col-xs-2
      = f.label :request_type_id, 'Type'
    .col-xs-5
      = f.select :request_type_id,
                 @request_types.collect { |rt| ["#{rt.description} (#{rt.code})", rt.id] },
                 { include_blank: 'None' },
                 class: 'selectpicker form-control',
                 disabled: true
  - if can_update_request
    .form-group
      .control-label.col-xs-2
        = f.label :approved, 'Approved?'
      .col-xs-5
        = f.check_box :approved, class: 'form-control checkbox-inline',
                                 checked: @request.approved
  .form-group
    .col-xs-offset-2.col-xs-5
      = f.submit('Update', class: 'btn btn-primary') if can_update_request
      = link_to 'Cancel', requests_path, class: 'btn btn-default'
